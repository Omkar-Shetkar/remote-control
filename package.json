{
  "name": "youtube-lan-remote",
  "version": "1.0.0",
  "description": "Control YouTube on your laptop from your phone over LAN.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Omkar Shetkar",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.omkarshetkar.youtuberemote",
    "productName": "YouTube LAN Remote",
    "files": [
      "main.js",
      "server.js",
      "player.html",
      "remote.html",
      "package.json",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}

